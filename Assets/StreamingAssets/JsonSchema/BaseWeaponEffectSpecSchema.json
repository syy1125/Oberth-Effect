{
    "$id": "BaseWeaponEffectSpecSchema",
    "type": "object",
    "properties": {
        "FiringPortOffset": {
            "$ref": "Vector2Schema.json"
        },
        "Damage": {
            "type": "number",
            "description": "The amount of damage this weapon does. This value may be interpreted differently depending on the weapon."
        },
        "DamageType": {
            "enum": ["Kinetic", "Energy", "Explosive"]
        },
        "ArmorPierce": {
            "type": "number",
            "minimum": 1,
            "maximum": 10
        },
        "ExplosionRadius": {
            "type": "number"
        },
        "Recoil": {
            "type": "number"
        },
        "MaxResourceUse": {
            "patternProperties": {
                "^.*$": { "type": "number" }
            }
        },
        "ScreenShake": {
            "type": "object",
            "properties": {
                "Strength": { "type": "number" },
                "Duration": { "type": "number" },
                "DecayCurve": { "enum": ["Linear", "Quadratic", "Cubic"] }
            }
        },
        "FireParticles": {
            "$ref": "ParticleSystemSpecArraySchema.json"
        }
    }
}